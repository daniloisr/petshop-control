<h1>Lista de Atendimentos</h1>

<table>
  <tr>
    <th>Cliente</th>
    <th>Cachorro</th>
    <th>Valor</th>
    <th>Feito a</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.client.name %></td>
    <td><%= order.dog.name %></td>
    <td>R$ <%= order.price %></td>
    <td><%= distance_of_time_in_words_to_now order.created_at %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @orders %>
