<%= simple_form_for(@client,
  :html => { :class => 'form-horizontal' }) do |f| %>

  <%= render 'shared/form_errors', :f => f %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone %>

  <div class="form-actions">
    <%= f.submit :label => 'Salvar', :class => 'btn-primary' %>
    <%= link_to 'Cancelar', clients_path, :class => 'btn pull-right' %>
  </div>
<% end %>
